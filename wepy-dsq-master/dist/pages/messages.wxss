@import "./../components/common/placeholder.wxss";
@import "./../components/common/bottomLoadMore.wxss";
.list_block {
  padding: 27rpx;
}
.list_item {
  background: #fff;
  padding: 0rpx 28rpx;
  border-radius: 20rpx;
}
.list_header {
  font-size: 28rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  align-items: center;
}
.list_header .time {
  color: #000;
}
.list_header .doc {
  color: #000;
  margin-left: 10rpx;
}
.list_content {
  font-size: 26rpx;
  color: #f71e1e;
  padding-top: 23rpx;
}
.list_footer {
  text-align: right;
  font-size: 22rpx;
  color: #999999;
  height: 70rpx;
  line-height: 70rpx;
}
