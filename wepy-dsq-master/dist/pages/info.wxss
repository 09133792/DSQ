.header {
  background: #ff6a3c;
  height: 260rpx;
  width: 100%;
}
.header_content {
  width: 100%;
  margin: 0 auto;
  text-align: center;
  padding-top: 48rpx;
}
.avatarUrl {
  width: 122rpx;
  height: 122rpx;
  border-radius: 1000px;
}
.nickName {
  font-size: 30rpx;
  padding-top: 15rpx;
}
.info_block {
  margin-top: 10rpx;
}
.info_block .item {
  border-top: 1rpx solid #dbdbdb;
  background: #fff;
  padding: 34rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info_block .item:last-child {
  border-bottom: 1rpx solid #dbdbdb;
}
.info_block .item_content {
  display: flex;
  align-items: center;
}
.info_block .item_content .text {
  margin-left: 20rpx;
  color: #1a1a1a;
}
.info_block .item_img {
  width: 42rpx;
  height: 42rpx;
}
.info_block .arrow {
  color: #cccccc;
  font-size: 32rpx;
}
.info_block .tip {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
}
