.search_read_only .search_content {
  width: 100%;
}
.classify {
  display: flex;
  position: relative;
}
.classify .classify_catetory {
  width: 200rpx;
  position: relative;
  z-index: 1;
}
.classify .classify_catetory .name {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.classify .classify_catetory .active {
  border-left: 6rpx solid #ff6a3c;
  background: #fff;
  color: #ff6a3c;
}
.classify .classify_detail {
  position: relative;
  z-index: 999;
  background: #fff;
  padding: 15px 10px 10px 30px;
}
.classify .classify_detail .title {
  font-size: 30rpx;
  color: #333;
  margin-left: 25rpx;
}
.classify .classify_detail .children {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0rpx;
}
.classify .classify_detail .child_image {
  width: 60px;
  height: 60px;
}
.classify .classify_detail .child_name {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 170rpx;
}
.classify .classify_detail .children_item {
  height: 200rpx;
  width: 170rpx;
  text-align: center;
}
