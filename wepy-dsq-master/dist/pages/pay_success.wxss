.pay_success {
  background: #fff;
  padding-bottom: 50rpx;
}
.pay_success .pay_btn,
.pay_success .pay_type,
.pay_success .pay_money {
  display: flex;
  width: 100%;
}
.pay_success .icon {
  margin: 0 auto;
  text-align: center;
  padding-top: 100rpx;
}
.pay_success .block {
  margin: 0 auto;
  text-align: center;
  display: flex;
  align-items: center;
}
.pay_success .icon-success {
  color: #ea4a3a;
  font-size: 150rpx;
}
.pay_success .success_doc {
  color: #1a1a1a;
}
.pay_success .type {
  color: #ea4a3a;
  margin-left: 20rpx;
}
.pay_success .pay_type {
  padding-top: 84rpx;
}
.pay_success .pay_money {
  padding-top: 25rpx;
}
.pay_success .btn_group {
  display: flex;
  align-items: center;
  padding-top: 100rpx;
}
.pay_success .btn_group .btn {
  font-size: 30rpx;
  padding: 22rpx 55rpx;
  text-align: center;
  margin: 0 auto;
  width: 100%;
  -moz-border-radius: 10rpx;
  /* Firefox */
  -webkit-border-radius: 10rpx;
  /* Safari 和 Chrome */
  border-radius: 10rpx;
  /* Opera 10.5+, 以及使用了IE-CSS3的IE浏览器 */
}
.pay_success .btn_group .order_detail {
  color: #333;
  border: 1px solid #ccc;
}
.pay_success .btn_group .get_store {
  background: #ed601b;
  color: #fff;
  margin-left: 85rpx;
}
