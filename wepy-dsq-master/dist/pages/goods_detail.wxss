@import "./../components/common/timer.wxss";
@import "./../components/comment_list.wxss";
.swiper {
  height: 662rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.big_images {
  height: 100%;
  display: block;
  margin-bottom: 90rpx;
}
.big_images image {
  width: 100%;
}
.details-msg {
  border-top: 1px solid #ededed;
  padding: 30rpx 30rpx;
  background: #fff;
}
.details-msg .details-title {
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  font-size: 30rpx;
  color: #333;
}
.details-msg .details-introduction {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.details-msg .details_pinfo {
  padding: 20rpx 0;
  position: relative;
  display: flex;
  align-items: center;
}
.details-msg .details_pinfo .price {
  color: #f73c3c;
  font-size: 45rpx;
}
.details-msg .details_pinfo .other-price {
  font-size: 28rpx;
  padding-left: 40rpx;
}
.details-msg .details_pinfo .share-box {
  text-align: center;
  font-size: 20rpx;
  padding-left: 50rpx;
  flex: 1;
}
.details-msg .details_pinfo .icon-share {
  display: block;
  padding-bottom: 5rpx;
  font-size: 40rpx;
}
.details-msg .details_pinfo .baoyou {
  color: #808080;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.details-msg .details_pinfo .order_time {
  position: absolute;
  right: 170rpx;
  top: 0rpx;
}
.order_num {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 108rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 0 30rpx;
}
.order_num .doc {
  color: #808080;
}
.order_num .doc .num {
  color: #f73c3c;
}
.block {
  padding: 27rpx 0rpx;
  background: #fff;
}
.block .block_title {
  color: #000;
  height: 30rpx;
  line-height: 30rpx;
  border-left: 6px solid #f73c3c;
  padding-left: 20rpx;
}
.block .block_content {
  padding: 38rpx 22rpx;
}
.block .block_content .process {
  font-size: 20rpx;
  margin: 0 auto;
  border: 1px solid #999999;
  padding: 10rpx;
  border-radius: 200px;
  text-align: center;
  margin-bottom: 25rpx;
  color: #808080;
}
.block .block_content .doc {
  color: #808080;
  font-size: 26rpx;
  line-height: 30rpx;
}
.block .table {
  margin: 0 auto;
  margin-top: -24rpx;
}
.block .table .th {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.block .table .tr {
  font-size: 26rpx;
  color: #808080;
  text-align: left;
  flex: 1;
}
.detail-bottom {
  width: 100%;
  border-top: 1px solid #ededed;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 1001;
}
.detail-bottom .bottom-box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: relative;
}
.detail-bottom .bottom-box .contact {
  width: 100rpx;
  height: 80rpx;
  margin: 0 auto;
  position: absolute;
  text-align: center;
  line-height: 80rpx;
  left: 100rpx;
  opacity: 0;
}
.detail-bottom .sy-bottom {
  padding: 15rpx 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.detail-bottom .btn_order {
  background: #ff4856;
  color: #fff;
}
.detail-bottom .btn_cart {
  color: #fff;
  background: #ff6e30;
}
.detail-bottom .order_color {
  background: #A9A9A9;
  color: #fff;
}
.detail-bottom .cart_color {
  color: #fff;
  background: #A9A9A9;
}
.detail-bottom .item:first-child {
  border-right: 1px solid #efefef;
}
.detail-bottom .item {
  flex: 1;
  text-align: center;
}
.detail-bottom .item .doc {
  font-size: 24rpx;
}
.detail-bottom .selec_active .doc {
  color: #ff4856;
}
.detail-bottom .selec_active .iconfont {
  color: #ff4856;
}
.over_model {
  position: fixed;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  width: 100%;
  height: 100%;
  top: 0;
}
.head_box {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  padding-bottom: 26rpx;
}
.head_box .img_wrap {
  height: 200rpx;
  width: 200rpx;
  background: #000;
}
.head_box .goods_img {
  height: 200rpx;
  width: 200rpx;
  background: #000;
}
.head_box .product_wrap {
  padding: 20rpx;
}
.head_box .product_name {
  color: #666;
}
.head_box .price {
  color: #e11500;
  font-size: 36rpx;
  padding-top: 32rpx;
}
.rule_box {
  border-bottom: 1px solid #efefef;
  padding-bottom: 26rpx;
}
.rule_box .title {
  color: #4c4c4c;
  font-size: 32rpx;
  margin-top: 10rpx;
}
.rule_box .items {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5rpx;
  margin-left: -20rpx;
}
.rule_box .item {
  padding: 15rpx 28rpx;
  background: #e6e6e6;
  color: #000;
  margin-left: 20rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.rule_box .active {
  background: #ed394a;
  color: #fff;
}
.num_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0rpx;
}
.num_box .title {
  color: #4c4c4c;
  font-size: 32rpx;
}
.buy-num {
  width: 170rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  font-size: 24rpx;
  text-align: center;
}
.buy-num .jian-btn {
  width: 48rpx;
  height: 100%;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}
.buy-num .jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}
.buy-num .jia-btn {
  width: 48rpx;
  height: 100%;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}
.buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}
.buy-num input {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
}
.panle_model {
  position: absolute;
  height: 0rpx;
  width: 100%;
  z-index: 1002;
  background: #fff;
  bottom: 0;
}
.model_content {
  padding: 20rpx;
  position: relative;
}
.colse_model {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.colse_model .icon-close {
  color: #e11500;
  font-size: 32rpx;
}
.comfire_btn {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: #ff6e30;
  text-align: center;
  color: #fff;
  position: absolute;
  bottom: 0;
  z-index: 10003;
}
.button-more-cmment {
  font-size: 28rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  margin: 20rpx auto;
  width: 200rpx;
  -moz-border-radius: 10rpx;
  /* Firefox */
  -webkit-border-radius: 10rpx;
  /* Safari 和 Chrome */
  border-radius: 10rpx;
  /* Opera 10.5+, 以及使用了IE-CSS3的IE浏览器 */
  color: #ff4856;
  border: 1px solid #ff4856;
}
