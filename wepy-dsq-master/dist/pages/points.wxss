@import "./../components/points_detail.wxss";
.points {
  position: relative;
  background: #f2f2f2;
}
.jf_content {
  position: relative;
  z-index: 6;
  height: 250rpx;
}
.head_bc {
  height: 250rpx;
  width: 100%;
  position: absolute;
}
.jf {
  font-size: 32rpx;
  color: #fff;
  padding: 50rpx 0rpx 10rpx 35rpx;
}
.avatarUrl {
  width: 146rpx;
  height: 146rpx;
  border-radius: 1000px;
  border: 1px solid #fff;
}
.jf_header {
  display: flex;
  align-items: center;
  padding: 70rpx 25rpx;
  position: relative;
}
.jf_num {
  margin-left: 25rpx;
}
.jf_title {
  color: #fff;
  display: flex;
  align-items: center;
}
.icon-jifen {
  margin-right: 10rpx;
}
.mt25 {
  margin-top: 25rpx;
}
.btn_jf_rule {
  position: absolute;
  right: -30rpx;
  color: #ed7437;
  background: rgba(255, 255, 255, 0.8);
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 200px;
  text-align: center;
  padding-right: 10rpx;
}
.qds_info_block {
  background: #fff;
  padding-bottom: 40rpx;
}
.qds_info_block .jf_detai {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 78rpx;
  padding: 0rpx 30rpx;
  margin-top: 40rpx;
}
.qds_info_block .jf_detai .left {
  font-weight: 500;
  font-size: 36rpx;
}
.qds_info_block .jf_detai .right {
  color: #a3a3a3;
  font-size: 24rpx;
  line-height: 76rpx;
  margin: 30rpx 0rpx;
}
.qds_info_block .qds_detai {
  display: flex;
  align-item: center;
  justify-content: space-between;
  padding: 0rpx 52rpx;
  background: #fff;
}
.qds_info_block .qds_detai .qds_detai_block {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.qds_info_block .qds_detai .qds_detai_block .qds_val {
  font-size: 40rpx;
}
.qds_info_block .qds_detai .qds_detai_block .qds_bar {
  font-size: 26rpx;
}
.tip_info {
  margin: 10px auto;
  text-align: center;
  font-size: 22rpx;
  font-color: #111;
}
