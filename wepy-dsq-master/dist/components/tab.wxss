/**index.wxss**/
.dot {
  position: absolute;
  display: flex;
  width: 37rpx;
  height: 35rpx;
  line-height: 40rpx;
  text-align: center;
  align-items: center;
  /*垂直居中*/
  justify-content: center;
  /*水平居中*/
  background: #e52424;
  border-radius: 100px;
  color: #fff;
  z-index: 999;
  font-size: 26rpx;
  top: 0;
  right: -10rpx;
}
.dotbig {
  position: absolute;
  display: flex;
  width: 50rpx;
  height: 35rpx;
  line-height: 40rpx;
  text-align: center;
  align-items: center;
  /*垂直居中*/
  justify-content: center;
  /*水平居中*/
  background: #e52424;
  border-radius: 100px;
  color: #fff;
  z-index: 999;
  font-size: 26rpx;
  top: 0;
  right: -10rpx;
}
.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #fff;
}
.swiper-tab-list {
  font-size: 30rpx;
  color: #777777;
  padding: 0 20rpx;
  position: relative;
}
.active {
  color: #eb6623;
  border-bottom: 5rpx solid #eb6623;
}
.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.swiper-item-box {
  overflow-y: scroll;
  overflow-x: hidden;
}
