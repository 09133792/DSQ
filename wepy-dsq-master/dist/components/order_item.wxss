@import "./shop_item_list.wxss";
.order_item {
  padding: 10rpx 0rpx;
  background: #f7f7f7;
  margin-bottom: 30rpx;
}
.order_item .title {
  font-size: 26rpx;
  color: #333;
}
.order_item .order_doc {
  font-size: 26rpx;
  color: #808080;
}
.order_item .mt10 {
  margin-top: 10rpx;
}
.order_item .order_state {
  color: #ff4856;
  font-size: 32rpx;
}
.order_item .order_list_top {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.order_item .order_list_footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}
.order_item .order_list_footer .num {
  color: #ff4856;
}
.order_item .order_list_top {
  padding-bottom: 26rpx;
  border-bottom: 1px solid #efefef;
}
.order_item .list {
  background: #fff;
  padding: 30rpx;
  margin-top: 15rpx;
}
.order_item .btn_group {
  display: flex;
  align-items: center;
}
.order_item .btn_group .btn {
  font-size: 30rpx;
  padding: 22rpx 35rpx;
  text-align: center;
  margin: 0 auto;
  width: 100%;
  -moz-border-radius: 15rpx;
  /* Firefox */
  -webkit-border-radius: 15rpx;
  /* Safari 和 Chrome */
  border-radius: 15rpx;
  /* Opera 10.5+, 以及使用了IE-CSS3的IE浏览器 */
}
.order_item .btn_group .btn_del {
  color: #333;
  border: 1px solid #ccc;
}
.order_item .btn_group .btn_pay {
  background: #ff4856;
  color: #fff;
  margin-left: 20rpx;
}
