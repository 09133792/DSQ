.swipe-item-wrapper {
  height: 100%;
  position: relative;
  overflow: hidden;
  margin-top: 2rpx;
}
.swipe-item-wrapper .swipe-actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 140rpx;
  position: absolute;
  top: 0;
  z-index: 1;
}
.swipe-item-wrapper .swipe-actions.actions-left {
  left: 0;
}
.swipe-item-wrapper .swipe-actions.actions-right {
  right: 0;
}
.swipe-item-wrapper .swipe-content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  padding: 0 18rpx;
  background-color: white;
}
.swipe-item-wrapper .swipe-content .swipe-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  color: #666;
}
.swipe-item-wrapper .swipe-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: white;
}
.swipe-item-wrapper .swipe-btn.del {
  background-color: #f4333c;
}
.swipe-item-wrapper .swipe-btn.edit {
  background-color: #108ee9;
}
