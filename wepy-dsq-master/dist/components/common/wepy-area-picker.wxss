.cascade_box {
  font-size: 32rpx;
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 99999;
}
.cascade_hei {
  width: 100%;
  height: 100vh;
  background: #fff;
  opacity: 0;
}
.cascade_find {
  width: 100%;
  height: 600rpx;
  position: fixed;
  bottom: -600rpx;
  left: 0;
  background: #fff;
  z-index: 99999;
}
.quxiao,
.queren {
  display: block;
  position: absolute;
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  /*background: #00f;*/
  text-align: center;
  color: #0CBB0A;
}
.quxiao {
  color: #939393;
}
.queren {
  right: 0;
  top: 0;
}
.pvc {
  font-size: 38rpx;
}
.cascade_header {
  height: 80rpx;
  width: 100%;
  margin-bottom: 20rpx;
}
