@import "./rate.wxss";
.empty-box {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
.empty-box .icon-message {
  font-size: 50rpx;
}
.empty-box .empty-text {
  font-size: 26rpx;
  padding-left: 10rpx;
}
.comment-list {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef;
}
.comment-list .header {
  display: flex;
  align-items: center;
}
.comment-list .header .header-img {
  width: 60rpx;
  height: 60rpx;
}
.comment-list .header .name {
  font-size: 28rpx;
  padding: 0 15rpx;
  color: #333;
}
.comment-list .header .time {
  flex: 1;
  font-size: 24rpx;
  text-align: right;
  color: #999;
}
.comment-list .content {
  font-size: 26rpx;
  padding-top: 10rpx;
}
.comment-list .content-child {
  font-size: 26rpx;
  padding: 20rpx 30rpx;
  background: #f7f7f7;
  border-radius: 5rpx;
  margin-top: 10rpx;
}
